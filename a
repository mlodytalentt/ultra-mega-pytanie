<body>

<div id="container">
    <h1>Czy zostaniesz mojƒÖ walentynkƒÖ?</h1>
    <div class="buttons">
        <div id="yes" class="btn">Tak</div>
        <div id="no" class="btn">Nie</div>
    </div>
</div>

<div id="loveMessage">Kocham Ciƒô ‚ù§Ô∏è</div>

<div id="imageContainer">
    <img src="HOMIK.png" alt="Walentynka">
</div>

<script>
const container=document.getElementById("container");
const noBtn=document.getElementById("no");
const yesBtn=document.getElementById("yes");
const imgContainer=document.getElementById("imageContainer");
const loveMessage=document.getElementById("loveMessage");
const body=document.body;

/* CENTROWANIE */
function center(){
    const maxX=window.innerWidth-container.offsetWidth;
    const maxY=window.innerHeight-container.offsetHeight;
    container.style.left=maxX/2+"px";
    container.style.top=maxY/2+"px";
}
window.onload=center;
window.onresize=center;

/* UCIEKANIE */
noBtn.addEventListener("mouseenter",()=>{
    const maxX=window.innerWidth-container.offsetWidth;
    const maxY=window.innerHeight-container.offsetHeight;
    container.style.left=Math.random()*maxX+"px";
    container.style.top=Math.random()*maxY+"px";
});

/* WYBUCH SERDUSZEK */
function burst(side){
    const centerY=window.innerHeight/2;
    const startX=(side==="left")?0:window.innerWidth;

    for(let i=0;i<200;i++){
        const heart=document.createElement("div");
        heart.classList.add("burstHeart");
        heart.innerHTML="‚ù§Ô∏è";
        heart.style.left=startX+"px";
        heart.style.top=centerY+"px";

        const angle=Math.random()*Math.PI*2;
        const radius=Math.random()*window.innerWidth*0.5;
        const x=Math.cos(angle)*radius*(side==="left"?1:-1);
        const y=Math.sin(angle)*radius;

        heart.style.setProperty("--x",x+"px");
        heart.style.setProperty("--y",y+"px");

        body.appendChild(heart);
        setTimeout(()=>heart.remove(),1000);
    }
}

/* OPADAJƒÑCE SERCA */
function fallingHearts(){
    for(let i=0;i<150;i++){
        const heart=document.createElement("div");
        heart.classList.add("heart");
        heart.innerHTML="üíñ";
        heart.style.left=Math.random()*window.innerWidth+"px";
        heart.style.animationDuration=(4+Math.random()*3)+"s";
        heart.style.fontSize=(15+Math.random()*25)+"px";
        body.appendChild(heart);
        setTimeout(()=>heart.remove(),7000);
    }
}

/* KLIK TAK */
yesBtn.addEventListener("click",()=>{
    body.style.background="#ff3e3e";

    container.style.opacity="0";
    setTimeout(()=>container.style.display="none",400);

    burst("left");
    burst("right");

    setTimeout(()=>fallingHearts(),800);

    loveMessage.style.display="block";

    setTimeout(()=>{
        imgContainer.style.display="block";
        setTimeout(()=>{
            imgContainer.style.transform="translate(-50%, -50%) scale(1)";
        },20);
    },500);
});
</script>

</body>
</html>
